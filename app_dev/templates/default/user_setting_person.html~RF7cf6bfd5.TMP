<nav>
	<a href="/user/my_apps">我的应用</a>
	<a href="/user/msg">消息#{'<var>(%d)</var>' % current_user['new_msg'] if current_user.get('new_msg', 0) else ''}</a>
	<a href="/user/setting" class="current">设置</a>
</nav>

<script>
$(function(){
	$('#cn_up').uploadify({
		'swf'		: '/static/js/uploadify.swf',
		'uploader'	: '/user/setting',
		'post_params': {'act': 'upload', 'secure_email': '#{cookie_email}'},
		'buttonText': '上传图片',
		'fileTypeExts':'*.png;*.jpg;*.jpeg;*.gif',
		'multi'		: false,
		'fileSizeLimit': 4000,
		'method': 'POST',
		'fileObjName': 'upload_file',
		'onUploadStart' : function(file) {
			$('em[for=p_id_card_img]').css('display','none');
		},
		'onUploadSuccess' : function(file, data, response) {
		    rspobj = jQuery.parseJSON(data);
            if(rspobj.status==200){
                $("#p_id_card_img").val(rspobj.img_url);
                $("#old_file_name").text(rspobj.old_file_name);
            }else{
                alert(rspobj.msg);
            }
        },
        'onUploadError' : function(file, errorCode, errorMsg, errorString) {
            alert('文件 ' + file.name + ' 上传失败: ' + errorString);
        }
	});
	$('#appcent form').validate({
		errorElement:'em',
		errorClass:'icon_err',
		onkeyup:false,
		rules: {
			p_contact_email: {
				required: true,
				email: true,
			},
			p_show_name: {
				required: true,
			},
			p_name: {
				required: true,
				maxlength: 24,
			},
			p_id_num: {
				required: true,
			},
			p_contact_tel: {
				required: true,
			},
			p_id_card_img: {
				required: true,
			},
		},
		messages: {
			p_contact_email: {
				required: '邮箱地址不能为空',
				email: '请输入正确的邮箱地址（例如 7po@7po.com）'
			},
			p_show_name: {
				required: '开发者名称不能为空',
			},
			p_name: {
				required: '真实姓名不能为空',
				maxlength: '真实姓名不能超过24个字符',
			},
			p_id_num: {
				required: '身份证号不能为空',
			},
			p_contact_tel: {
				required: '联系电话不能为空',
			},
			p_id_card_img: {
				required: '身份证扫描件没有上传',
			},
		}
	});
});
</script>
